@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
}
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/Contact.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/1a29b24407.js" crossorigin="anonymous"></script>
        <title>Document</title>
    </head>
<body>


    <div class="wrapper">
        <header>
            <div class="GreenBox">
                <div class="GreenBoxInput">
                    <div class="AddressText">
                        <p>Klarabergsviadukten 90, 111 64 Stockholm</p>
                    </div>

                    <div class="SocialMediaButtons">
                        <a href="#"><div><i class="fa-brands fa-facebook"></i></div></a>
                        <a href="#"><div><i class="fa-brands fa-twitter"></i></div></a>
                        <a href="#"><div><i class="fa-brands fa-linkedin-in"></i></div></a>
                    </div>    
                </div>
                
            </div>

            <div class="WhiteBox">
                <div class="LogoAndButtons">
                    <div class="ImageLogo">
                        <a href="/Home">
                        @if (Model.Value<IPublishedContent>("headerLogo") != null)
                            {
                                var headerLogo = Model.Value<IPublishedContent>("headerLogo").Url();
                                <img src="@headerLogo" alt="headerLogo ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            } 
                        </a>
                    </div>  
                    <div class="HeaderButtons">
                        <a href="/About">About</a>
                        <a href="/Services">Services</a>
                        <a href="/Projects">Projects</a>
                        <a href="/Contact">Contact</a>
                    </div>
                    
                </div>

                <div class="SearchBar">
                    <input type="text" placeholder="Search..">
                    <a href="#"><i class="fa-solid fa-magnifying-glass"></i></a>
                </div>
                

            </div>
        </header>

        <main>
            <section class="ContactUs">
                <div class="ContactUsChild">
                    <div class="ContactUsText">
                        <h2>@Model.Value("contactTitle")</h2>
                        <p>@Model.Value("contactText")</p>
                    </div> 
                </div>
            </section>

            <section class="ContactInformation">
                <div class="ContactUsPicture">
                    @if (Model.Value<IPublishedContent>("contactUsPicture") != null)
                            {
                                var contactUsPicture = Model.Value<IPublishedContent>("contactUsPicture").Url();
                                <img src="@contactUsPicture" alt="contactUsPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            } 
                </div>

                <div class="ContactText">
                    <div>
                        <h2>
                           @Model.Value("contactUsTitle")
                        </h2>

                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-solid fa-location-dot"></i>
                                <h6>@Model.Value("contactInformationLocation")</h6>
                            </div>
                            

                            <p>@Model.Value("contactInformationAddress")</p>
                        </div>
                        

                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-solid fa-phone"></i>
                                <h6>@Model.Value("contactInformationPhone")</h6>  
                            </div> 
                            <p>@Model.Value("contactInformationPhoneNumber")</p>
                        </div>

                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-regular fa-envelope"></i>
                                <h6>@Model.Value("contactInformationEmail")</h6>
                            </div>
                            <p>@Model.Value("contactInformationEmailAddress")</p>
                        </div>
                    
                    </div>
                </div>

            </section>

            <section class="ContactUsMap">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2035.1613602973503!2d18.05131977734203!3d59.330259810946!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f9d61b5b2a595%3A0xd9fa560691e12d7!2sKlarabergsviadukten%2090%2C%20111%2064%20Stockholm!5e0!3m2!1ssv!2sse!4v1726303803832!5m2!1ssv!2sse" width="1920" height="748" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                    <div class="NexProject">
                        <div class="NextProjectChild">
                            <p>Request a call back</p>
    
                            <h2>
                                Let us know about your <br>
                                next project
                            </h2>
        
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. <br>
                                Maecenas consectetur, ligula semper sagittis lobortis, eros metus efficitur purus
                            </p>
                        </div>
                    </div>
                </iframe>
                
            </section>
        </main>
        
        <footer>
            <div class="WhiteBox">
                @if (Model.Value<IPublishedContent>("footerPicture") != null)
                            {
                                var footerPicture = Model.Value<IPublishedContent>("footerPicture").Url();
                                <img src="@footerPicture" alt="footerPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            } 
            </div>
    
            <div class="BlackBox">
                <p>© Onatrix. All Rights Reserved. Credits to <span>Themesflat</span></p>
            </div>
        </footer>
    </div>
    
</body>
</html>