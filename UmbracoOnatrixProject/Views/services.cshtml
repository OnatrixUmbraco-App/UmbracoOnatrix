@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
}
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/Services.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/1a29b24407.js" crossorigin="anonymous"></script>
        <title>Document</title>
    </head>
<body>

    <div class="wrapper">

        <header>
            <div class="GreenBox">
                <div class="GreenBoxInput">
                    <div class="AddressText">
                        <p>Klarabergsviadukten 90, 111 64 Stockholm</p>
                    </div>

                    <div class="SocialMediaButtons">
                        <a href="#"><div><i class="fa-brands fa-facebook"></i></div></a>
                        <a href="#"><div><i class="fa-brands fa-twitter"></i></div></a>
                        <a href="#"><div><i class="fa-brands fa-linkedin-in"></i></div></a>
                    </div>    
                </div>
                
            </div>

            <div class="WhiteBox">
                <div class="LogoAndButtons">
                    <div class="ImageLogo">
                        <a href="/Home">
                            @if (Model.Value<IPublishedContent>("headerLogo") != null)
                            {
                                var headerLogo = Model.Value<IPublishedContent>("headerLogo").Url();
                                <img src="@headerLogo" alt="headerLogo ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }
                        
                        </a>
                    </div>  
                    <div class="HeaderButtons">
                        <a href="/About">About</a>
                        <a href="/Services">Services</a>
                        <a href="/Projects">Projects</a>
                        <a href="/Contact">Contact</a>
                    </div>
                    
                </div>

                <div class="SearchBar">
                    <input type="text" placeholder="Search..">
                    <a href="#"><i class="fa-solid fa-magnifying-glass"></i></a>
                </div>
                

            </div>
        </header>  

        <main>

            <section class="OurServices">
                <div class="OurServicesBox">
                    <div class="ourServicesTextBox">
                        <h2>
                            @Model.Value("ourServicesTitle")
                        </h2>
                        <p>
                            @Model.Value("ourServicesText")
                        </p>
                    </div>
                </div>
            </section>

            <section class="YourBusiness">
                <div class="YourBusinessText">
                    <h2>
                       @Model.Value("yourBusinessTitle")  
                    </h2>
                </div>

                <div class="YourBusinessTopBoxes">
                     <a href="/RiskManagement">

                        <div class="YourBusinessBox">
                            <h4>
                                @Model.Value("yourBusinessBoxOneTitle")
                            </h4>

                            @if (Model.Value<IPublishedContent>("yourBusinessBoxOnePicture") != null)
                                {
                                    var yourBusinessBoxOnePicture = Model.Value<IPublishedContent>("yourBusinessBoxOnePicture").Url();
                                    <img src="@yourBusinessBoxOnePicture" alt="yourBusinessBoxOnePicture ">   
                                }
                                else
                                {
                                    <p>Ingen bild tillgänglig</p>
                                }

                            <p>
                            @Model.Value("yourBusinessBoxOneText")
                            </p>

                        </div>
                    </a>
                    <div class="YourBusinessBox">
                        <h4>
                            @Model.Value("yourBusinessBoxTwoTitle")
                        </h4>

                        @if (Model.Value<IPublishedContent>("yourBusinessBoxTwoPicture") != null)
                            {
                                var yourBusinessBoxTwoPicture = Model.Value<IPublishedContent>("yourBusinessBoxTwoPicture").Url();
                                <img src="@yourBusinessBoxTwoPicture" alt="yourBusinessBoxTwoPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                        <p>
                            @Model.Value("yourBusinessBoxTwoText")
                        </p>

                    </div>
                    <div class="YourBusinessBox">
                        <h4>
                            @Model.Value("yourBusinessBoxThreeTitle")
                        </h4>

                         @if (Model.Value<IPublishedContent>("yourBusinessBoxThreePicture") != null)
                            {
                                var yourBusinessBoxThreePicture = Model.Value<IPublishedContent>("yourBusinessBoxThreePicture").Url();
                                <img src="@yourBusinessBoxThreePicture" alt="yourBusinessBoxThreePicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                        <p>
                            @Model.Value("yourBusinessBoxThreeText") 
                        </p>
                    </div>
                </div>

                <div class="YourBusinessBottomBoxes">
                    <div class="YourBusinessBottomBox">
                        <h4>
                            @Model.Value("yourBusinessBoxFourTitle")
                        </h4>

                         @if (Model.Value<IPublishedContent>("yourBusinessBoxFourPicture") != null)
                            {
                                var yourBusinessBoxFourPicture = Model.Value<IPublishedContent>("yourBusinessBoxFourPicture").Url();
                                <img src="@yourBusinessBoxFourPicture" alt="yourBusinessBoxFourPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                        <p>
                            @Model.Value("yourBusinessBoxFourText")
                        </p>

                    </div>
                    <div class="YourBusinessBottomBox">
                        <h4>
                            @Model.Value("yourBusinessBoxFiveTitle")
                        </h4>
                        
                        @if (Model.Value<IPublishedContent>("yourBusinessBoxFivePicture") != null)
                            {
                                var yourBusinessBoxFivePicture = Model.Value<IPublishedContent>("yourBusinessBoxFivePicture").Url();
                                <img src="@yourBusinessBoxFivePicture" alt="yourBusinessBoxFivePicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                        <p>
                           @Model.Value("yourBusinessBoxFiveText")
                        </p>

                    </div>
                    <div class="YourBusinessBottomBox">
                        <h4>
                            @Model.Value("yourBusinessBoxSixTitle")
                        </h4>
                        
                        @if (Model.Value<IPublishedContent>("yourBusinessBoxSixPicture") != null)
                            {
                                var yourBusinessBoxSixPicture = Model.Value<IPublishedContent>("yourBusinessBoxSixPicture").Url();
                                <img src="@yourBusinessBoxSixPicture" alt="yourBusinessBoxSixPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                        <p>
                            @Model.Value("yourBusinessBoxSixText")
                        </p>

                    </div>

                </div>

                <div class="PagesNumber">
                    
                    <div>
                      <a href="#"><span>Prev</span></a>  
                    </div>
                    <div>
                      <a href="#">1</a>  
                    </div>
                    <div>
                      <a href="#">2</a>  
                    </div>
                    <div>
                      <a href="#">Next</a>  
                    </div>
                    
                    

                    


                </div>
            </section>

            <section class="ContactInformation">
                <div class="ContactPicture">

                     @if (Model.Value<IPublishedContent>("contactInformationPicture") != null)
                            {
                                var contactInformationPicture = Model.Value<IPublishedContent>("contactInformationPicture").Url();
                                <img src="@contactInformationPicture" alt="contactInformationPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                </div>
        
                <div class="ContactText">
                    <div>
                        <h2>
                            @Model.Value("contactInformationTitle")
                        </h2>
        
                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-solid fa-location-dot"></i>
                                <h6>@Model.Value("contactInformationLocation")</h6>
                            </div>
        
        
                            <p>@Model.Value("contactInformationAddress")</p>
                        </div>
        
        
                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-solid fa-phone"></i>
                                <h6>@Model.Value("contactInformationPhone")</h6>
                            </div> 
                            <p>@Model.Value("contactInformationPhoneNumber")</p>
                        </div>
        
                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-regular fa-envelope"></i>
                                <h6>@Model.Value("contactInformationEmail")</h6>
                            </div>
                            <p>@Model.Value("contactInformationEmailAddress")</p>
                        </div>
        
                    </div>
                </div>
        
            </section>

        </main>

        <footer>
            <div class="WhiteBox">

                 @if (Model.Value<IPublishedContent>("footerPicture") != null)
                            {
                                var footerPicture = Model.Value<IPublishedContent>("footerPicture").Url();
                                <img src="@footerPicture" alt="footerPicture ">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }
            </div>
    
            <div class="BlackBox">
                <p>© Onatrix. All Rights Reserved. Credits to <span>Themesflat</span></p>
            </div>
        </footer>
    </div>
    
</body>